{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "LinkedIn Posts Filter",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["alarms", "storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.linkedin.com/feed"],
  "icons": {
    "32": "linkedin.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
